## Docker Compose Environment Variables
## Copy this file to .env and fill in values for your environment

# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=uniserve
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=4000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-different-refresh-secret-key-change-this-in-production
ACCESS_TOKEN_TTL=180
REFRESH_TOKEN_TTL_SEC=604800
FASTIFY_GRACEFUL_SHUTDOWN_DELAY=500
RATE_LIMIT_MAX=100

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3000/api

# Nginx Configuration
NGINX_PORT=3000
NGINX_SSL_PORT=443