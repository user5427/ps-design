# Development Dockerfile for Frontend
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY index.html ./

# Install dependencies
RUN npm ci

# Copy source code and public assets
COPY src ./src
COPY public ./public

# Expose port
EXPOSE 3000

# Run development server with hot reload and bind to 0.0.0.0
CMD ["npm", "run", "dev", "--", "--host"]
