{
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:swagger\"",
        "dev:server": "tsx watch src/server.ts",
        "dev:swagger": "nodemon --watch src/routes --ext ts --exec \"npx tsx swagger.ts\"",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:deploy": "prisma migrate deploy --config=prisma.config.ts",
        "db:generate": "prisma generate --config=prisma.config.ts",
        "seed": "tsx src/scripts/seed.ts"
    },
    "dependencies": {
        "@fastify/autoload": "^6.3.0",
        "@fastify/env": "^5.0.3",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/swagger": "^9.6.1",
        "@fastify/swagger-ui": "^5.2.3",
        "@prisma/adapter-pg": "^7.0.1",
        "@prisma/client": "^7.0.0",
        "bcryptjs": "^2.4.3",
        "close-with-grace": "^2.3.0",
        "fastify": "^5.6.2",
        "fastify-plugin": "^5.1.0",
        "pg": "^8.13.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@types/bcryptjs": "^2.4.6",
        "@types/glob": "^8.1.0",
        "@types/node": "^24.10.1",
        "@types/pg": "^8.15.6",
        "@typescript-eslint/eslint-plugin": "^8.47.0",
        "@typescript-eslint/parser": "^8.47.0",
        "concurrently": "^9.2.1",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.1",
        "lefthook": "^2.0.4",
        "nodemon": "^3.1.11",
        "prisma": "^7.0.1",
        "swagger-autogen": "^2.23.7",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}