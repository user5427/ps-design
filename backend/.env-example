## Backend .env example
# Copy this file to .env and fill in values.
PORT=4000
FASTIFY_GRACEFUL_SHUTDOWN_DELAY=500
RATE_LIMIT_MAX=100

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-different-refresh-secret-key-change-this-in-production
ACCESS_TOKEN_TTL=180
REFRESH_TOKEN_TTL_SEC=604800

DATABASE_URL=postgres://postgres:postgres@localhost:5432/uniserve
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=uniserve
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Twilio SMS Configuration
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
# Enable/disable SMS notifications
ENABLE_SMS_NOTIFICATIONS=true
# IMPORTANT: For Twilio trial accounts, verify phone numbers in Twilio console first:
# https://console.twilio.com/us1/develop/phone-numbers/manage/verified